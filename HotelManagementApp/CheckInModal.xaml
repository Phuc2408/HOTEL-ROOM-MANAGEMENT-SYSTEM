<UserControl x:Class="HotelManagementApp.CheckInModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml"
             Background="#80000000">
    <!-- Nền đen mờ -->
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <metro:MetroWindow x:Name="PopupWindow" 
                           Background="White" 
                           Width="400" 
                           Height="300"
                           Title="Check-In Guest">
            <StackPanel Margin="20">
                <TextBlock Text="Check-In Guest" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Input fields -->
                <TextBox x:Name="GuestNameBox" PlaceholderText="Guest Name" Margin="0,0,0,10"/>
                <TextBox x:Name="IDCardBox" PlaceholderText="ID Card" Margin="0,0,0,10"/>
                <TextBox x:Name="PhoneBox" PlaceholderText="Phone Number" Margin="0,0,0,10"/>
                <DatePicker x:Name="CheckInDate" Margin="0,0,0,10"/>
                <DatePicker x:Name="CheckOutDate" Margin="0,0,0,20"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Margin="0,0,10,0" Click="Cancel_Click"/>
                    <Button Content="Check In" Background="MediumPurple" Foreground="White" Click="CheckIn_Click"/>
                </StackPanel>
            </StackPanel>
        </metro:MetroWindow>
    </Grid>
</UserControl>
