<UserControl x:Class="HotelManagementApp.RoomBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="100">
    <Border Background="{Binding Status, Converter={StaticResource RoomStatusToColorConverter}}"
            CornerRadius="8" Padding="10">
        <TextBlock Text="{Binding RoomNumber}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
