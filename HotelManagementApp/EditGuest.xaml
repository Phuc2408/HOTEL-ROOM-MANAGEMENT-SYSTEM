<Page x:Class="HotelManagementApp.EditGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditGuest">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Close Button -->
                <TextBlock Text="Edit Guest" FontSize="16" FontWeight="SemiBold" Foreground="#4B5563" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>

                <!-- Form for Guest Information -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Guest Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="Guest name" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="Name" Text="{Binding Name}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>

                    <!-- ID Card -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                        <TextBlock Text="ID Card" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="IDCard" Text="{Binding IDCard}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>

                    <!-- Phone Number -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="Phone number" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="Phone" Text="{Binding PhoneNumber}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                        <TextBlock Text="Email" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="Email" Text="{Binding Email}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>

                    <!-- Country -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="Country" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="Country" Text="{Binding Country}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                        <TextBlock Text="Status" FontSize="14" Foreground="#6B7280" Margin="0,0,0,5"/>
                        <TextBox x:Name="Status" Text="{Binding Room}" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1" Background="#F9FAFB" Foreground="#374151"/>
                    </StackPanel>
                </Grid>

                <!-- Save and Close Buttons -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                    <Button Content="Save" Style="{StaticResource IconButtonStyle}" Width="100" Height="35" Margin="10,0" HorizontalAlignment="Center" Click="SaveButton_Click"/>
                    <Button Content="Close" Style="{StaticResource IconButtonStyle}" Width="100" Height="35" Margin="10,0" HorizontalAlignment="Center" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
