<Page x:Class="HotelManagementApp.GuestManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Icon="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material"
 
      Title="Guest Management"
      Background="White"
      FontFamily="Segoe UI"
      FontSize="14">

    <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="1" Text="Guest Management" FontSize="22" FontWeight="Bold" Foreground="#2D3748" Margin="0,0,0,10"/>

        <!-- Toolbar -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <!-- Search -->
                <Border CornerRadius="12" Background="#E5E7EB" BorderBrush="#E5E7EB" BorderThickness="1" Width="200" Height="32" Margin="0,0,10,0" >
                    <TextBox x:Name="SearchBox"
         Text="Search"
         TextChanged="SearchBox_TextChanged"
         Foreground="Gray"
         GotFocus="SearchBox_GotFocus"
         LostFocus="SearchBox_LostFocus"
         Style="{StaticResource RoundedTextBoxStyle}" />
                </Border>

                <!-- Sort -->
                <ComboBox x:Name="SortComboBox"
                          Margin="20,0,20,0"
          Width="120"
          Style="{StaticResource RoundedComboBoxStyle}"
          SelectedIndex="0"
          SelectionChanged="SortComboBox_SelectionChanged"
          FontFamily="Poppins"
          FontSize="12"
          FontWeight="Normal"
          Foreground="Gray">
                    <ComboBoxItem Content="Newest"/>
                    <ComboBoxItem Content="Oldest"/>
                </ComboBox>

                <!-- Buttons -->
                <Button x:Name="EditGuestButton" Style="{StaticResource SquareIconButtonStyle}" Background="#4CAF50" Foreground="White" Margin="0,0,5,0" Padding="8,3" BorderThickness="0" Click="EditButton_Click">
                    <iconPacks:PackIconMaterial Kind="PencilOutline" Width="15" Height="15"/>
                </Button>
                <Button x:Name="DeleteGuestButton" Style="{StaticResource SquareIconButtonStyle}" Background="#F44336" Foreground="White" Padding="8,3" BorderThickness="0" Click="DeleteButton_Click">
                    <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="15" Height="15"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="GuestDataGrid"
          Grid.Row="3"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          SelectionMode="Single"
          Margin="10,0,0,10"
          RowHeight="36"
          GridLinesVisibility="Horizontal"
          VerticalAlignment="Top"
          Background="White"
          BorderThickness="0">
            <DataGrid.Columns>
                <!-- Checkbox -->
                <DataGridCheckBoxColumn Width="30" Header="" IsReadOnly="True">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                    <DataGridCheckBoxColumn.EditingElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridCheckBoxColumn.EditingElementStyle>
                </DataGridCheckBoxColumn>

                <!-- Guest Name -->
                <DataGridTextColumn Header="Guest Name" Binding="{Binding Name}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- ID Card -->
                <DataGridTextColumn Header="ID Card" Binding="{Binding IDCard}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Phone Number -->
                <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Email -->
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Check In Date -->
                <DataGridTextColumn Header="Check In Date" Binding="{Binding CheckInDate, StringFormat='dd/MM/yyyy'}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Status -->
                <DataGridTemplateColumn Header="Room" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding StatusColor}" CornerRadius="5" Padding="4" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding Room}"
                               FontSize="13"
                               FontWeight="Normal"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>


        <!-- Pagination -->
        <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0">
            <!-- Nút Back -->
            <Button Style="{StaticResource PaginationButtonStyle}" Click="BackPage_Click">
                <iconPacks:PackIconMaterial Kind="ChevronLeft" Width="16" Height="16"/>
            </Button>

            <!-- Các trang -->
            <Button Content="1" Style="{StaticResource PaginationButtonStyle}" />
            <Button Content="2" Style="{StaticResource PaginationButtonStyle}" />
            <Button Content="3" Style="{StaticResource PaginationButtonStyle}" />
            <Button Content="4" Style="{StaticResource PaginationButtonStyle}" />

            <!-- Nút Next -->
            <Button Style="{StaticResource PaginationButtonStyle}" Click="NextPage_Click">
                <iconPacks:PackIconMaterial Kind="ChevronRight" Width="16" Height="16"/>
            </Button>
        </StackPanel>

    </Grid>
</Page>